<h1>Edit Post</h1>

<%= form_with(model: @post, local: true) do |form| %>

<div>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
</div>
<div>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</div>
<div>
  <%= form.submit 'Update Post' %>
</div>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>