<h2>View Post</h2>
<h3><%= @post.title %></h3>
<p><%= @post.body %></p>
<div class="button">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary btn-sm" %> |
  <%= button_to "Delete", post_path(@post),
                         method: :delete,
                         data: { confirm: "Really delete?" },
                         class: "btn btn-danger btn-sm" %>
</div>
