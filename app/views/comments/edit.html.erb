<h2>Edit Comment</h2>

<%= form_for([@post, @comment]) do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit 'Update Comment', class: 'btn btn-primary' %>
  </p>
<% end %>

<%= link_to 'Back', post_path(@post), class: 'btn btn-secondary' %>
